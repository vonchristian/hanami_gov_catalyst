<h2>Add business</h2>
<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :business, '/businesses' do 
  	div class: "input" do 
  		label :name 
  		text_field :name 
  	end
  	div class: "controls" do 
  		submit "Create Business"
  	end
  end
 %>